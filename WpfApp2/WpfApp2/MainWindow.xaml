<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <Label Content="Введите имя:" Margin="10,10,0,0"/>
        <TextBox Name="inputTextBox" Width="200" Height="25" Margin="10,40,10,0"
                 ToolTip="Введите данные здесь" VerticalAlignment="Top"/>
        <Button Content="Ввод" Width="100" Height="30" Margin="10,80,10,0" 
                VerticalAlignment="Top" Click="InputButton_Click"/>
    </Grid>
</Window>