<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Введите текст:" Margin="10,10,0,0"/>
        <TextBox Name="textInput" AcceptsReturn="True" Width="350" Height="150" Margin="10,40,10,0" VerticalAlignment="Top"/>

        <Slider Name="fontSizeSlider" Minimum="8" Maximum="36" Value="12" 
                TickFrequency="1" IsSnapToTickEnabled="True" 
                Margin="10,200,10,0" VerticalAlignment="Top" 
                ValueChanged="FontSizeSlider_ValueChanged"/>

        <Label Content="Размер шрифта:" Margin="10,170,0,0"/>
        <Button Content="Сохранить" Width="100" Height="30" Margin="10,220,10,0" 
                VerticalAlignment="Top" Click="SaveButton_Click"/>
    </Grid>
</Window>
